<Application x:Class="OnePass.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OnePass"
             StartupUri="Windows/LoginWindow2.xaml" ShutdownMode="OnLastWindowClose" DispatcherUnhandledException="OnUnhandledException">

    <Application.Resources>
        <Style TargetType="Label" x:Key="DefaultLabel">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="0,5,5,5"/>
        </Style>
        <Style TargetType="Label" x:Key="ValidationLabel">
            <Setter Property="Foreground" Value="Red" />
            <Setter Property="Padding" Value="0"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="2" />
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Padding" Value="2" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="0,2,0,2"/>
        </Style>
    </Application.Resources>
    
</Application>
