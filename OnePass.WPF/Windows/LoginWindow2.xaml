<Window x:Class="OnePass.WPF.Windows.LoginWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:OnePass.WPF.Models"
        Title="OnePass" Height="400" Width="600" FontSize="16"
        ResizeMode="CanMinimize" WindowStartupLocation="Manual" WindowStyle="SingleBorderWindow" Background="#FF003264">

    <!-- LoginModel Datacontext -->
    <Window.DataContext>
        <models:LoginModel />
    </Window.DataContext>
    
    <!-- Resources -->
    <Window.Resources>

        <!--<Style TargetType="Window">
            <Setter Property="FontSize" Value="16" />
        </Style>-->

        <Style TargetType="Label">
            <Setter Property="Foreground" Value="WhiteSmoke" />
            <Setter Property="Padding" Value="0" />
        </Style>

        <Style TargetType="TextBox">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="3" />
                </Style>
            </Style.Resources>
            <Setter Property="Margin" Value="0,0,0,10" />
            <Setter Property="Padding" Value="2" />
        </Style>
        
    </Window.Resources>

    <!-- Content -->
    <Grid>

        <!-- Grid defintions -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <!-- Right panel -->
        <Grid Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            
            <!-- Login details -->
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="20,0,20,20">

                <Label Content="{Binding Path=UsernameLabel}" />
                <TextBox />

                <Label Content="{Binding Path=PasswordLabel}" />
                <TextBox />

            </StackPanel>

            <!-- Version number -->
            <Label Style="{x:Null}" Grid.Row="1" Content="{Binding Path=Version}" HorizontalAlignment="Right" Padding="0,0,20,10" Foreground="WhiteSmoke" FontSize="12" />

        </Grid>
        
    </Grid>
</Window>
