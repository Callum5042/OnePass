<Window x:Class="OnePass.Windows.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnePass.Windows"
        mc:Ignorable="d"
        Title="Change Password" Height="200" Width="200" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <StackPanel HorizontalAlignment="Center">
        
        <!-- Old password -->
        <TextBlock x:Name="oldPassTextBlock">Old Password</TextBlock>
        <PasswordBox x:Name="oldPassTextbox" />

        <!-- New password -->
        <TextBlock x:Name="newPassTextBlock">New Password</TextBlock>
        <PasswordBox x:Name="newPassTextbox" />

        <!-- Repeat new password -->
        <TextBlock x:Name="repeatPassTextBlock">Repeat Password</TextBlock>
        <PasswordBox x:Name="repeatPassTextbox" />
        
        <Button x:Name="SubmitButton" Content="Update" Click="SubmitButton_Click" />
        
    </StackPanel>
</Window>
