<Page x:Class="OnePass.Windows.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OnePass.Windows"
      mc:Ignorable="d" 
      d:DesignHeight="480" d:DesignWidth="640"
      Title="LoginPage">

    <StackPanel Margin="50,50,50,50" FocusManager.FocusedElement="{Binding ElementName=PasswordTextbox}">

        <TextBlock x:Name="TitleTextblock" VerticalAlignment="Stretch" HorizontalAlignment="Center">OnePass</TextBlock>
        <TextBlock x:Name="VersionTextblock" VerticalAlignment="Stretch" HorizontalAlignment="Center">OnePass</TextBlock>

        <Label Content="Password" Width="120" Margin="0,20,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <PasswordBox x:Name="PasswordTextbox" Width="120" />
        
        <Button Click="LoginButton_OnClick" Width="120" Margin="0,10,0,0" VerticalAlignment="Stretch" IsDefault="True">Login</Button>
        
    </StackPanel>

</Page>
