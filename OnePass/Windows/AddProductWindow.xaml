<Window x:Class="OnePass.Windows.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnePass.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="Add Product" Height="400" Width="300" ResizeMode="NoResize" SizeToContent="Height" WindowStyle="SingleBorderWindow">

    <StackPanel Margin="10,0,10,10">

        <Label Style="{StaticResource DefaultLabel}" Content="Name" />
        <TextBox x:Name="NameTextbox"></TextBox>

        <Label Style="{StaticResource DefaultLabel}" Content="Login" />
        <TextBox x:Name="LoginTextbox"></TextBox>

        <Label Style="{StaticResource DefaultLabel}" Content="Password" />
        <TextBox x:Name="PasswordTextbox"></TextBox>

        <Grid Margin="0,10,0,5">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button x:Name="SubmitButton" Grid.Column="0" Content="Update" IsDefault="True" Click="OnClick_AddProduct" />
            <Button x:Name="GeneratePasswordButton" Grid.Column="3" Content="Generate Password" Click="OnClick_GeneratePassword" />

        </Grid>
        
    </StackPanel>

</Window>
