<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp5.0</TargetFramework>
    <UseWPF>true</UseWPF>
    <Description>One pass to rule them all</Description>
    <Authors>Callum Anning</Authors>
    <AssemblyVersion>0.1.0.0</AssemblyVersion>
    <PackageReleaseNotes>Beta</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="3.1.7" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Windows\AuthorWindow - Copy - Copy.xaml.cs">
      <SubType>Code</SubType>
      <DependentUpon>AuthorWindow - Copy.xaml.cs</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="data.bin">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="data.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="settings.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Page Update="Windows\AddProductWindow.xaml">
      <SubType>Designer</SubType>
    </Page>
  </ItemGroup>

</Project>