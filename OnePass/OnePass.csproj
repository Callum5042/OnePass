<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <Description>One pass to rule them all</Description>
    <Authors>Callum Anning</Authors>
    <AssemblyVersion>0.5.0.0</AssemblyVersion>
    <PackageReleaseNotes>Beta</PackageReleaseNotes>
    <FileVersion>0.5.0.0</FileVersion>
    <Version>0.5.0</Version>
    <ApplicationIcon>OnePassIcon.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Windows\AuthorWindow - Copy - Copy.xaml.cs">
      <SubType>Code</SubType>
      <DependentUpon>AuthorWindow - Copy.xaml.cs</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="data.bin">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="data.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="settings.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Page Update="Windows\AddProductWindow.xaml">
      <SubType>Designer</SubType>
    </Page>
  </ItemGroup>

</Project>